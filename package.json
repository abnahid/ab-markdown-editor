{
  "name": "@abnahid/ab-markdown-editor",
  "version": "0.1.0",
  "description": "A React 19 / Next.js 15 compatible Markdown editor",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "unpkg": "dist/index.js",
  "jsdelivr": "dist/index.js",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
    "prepare": "npm run build",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abnahid/ab-markdown-editor"
  },
  "keywords": [
    "markdown",
    "editor",
    "react",
    "react19",
    "nextjs15"
  ],
  "author": "Ab Nahid Agency",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abnahid/ab-markdown-editor/issues"
  },
  "homepage": "https://github.com/abnahid/ab-markdown-editor#readme",
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15.15.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.6.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.9.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "react": "^16.9.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "eventemitter3": "^5.0.1",
    "tsup": "^8.5.0",
    "uuid": "^11.1.0"
  }
}
