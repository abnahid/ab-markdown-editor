{
  "name": "@abnahid/ab-markdown-editor",
  "version": "0.1.0",
  "description": "A React 19 / Next.js 15 compatible Markdown editor",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "unpkg": "lib/index.js",
  "jsdelivr": "lib/index.js",
  "files": [
    "cjs",
    "esm",
    "lib",
    "preview",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts",
    "dev": "tsup src/index.tsx --watch --format esm,cjs --dts",
    "prepare": "npm run build",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "test": "echo \"No tests yet\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abnahid/ab-markdown-editor"
  },
  "keywords": [
    "markdown",
    "editor",
    "react",
    "react19",
    "nextjs15"
  ],
  "author": "Ab Nahid Agency",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/abnahid/ab-markdown-editor/issues"
  },
  "homepage": "https://github.com/abnahid/ab-markdown-editor#readme",
  "devDependencies": {
    "@alib/build-scripts": "^0.1.3",
    "@iceworks/spec": "^1.0.0",
    "@testing-library/react": "^10.2.1",
    "@types/chai": "^4.2.7",
    "@types/classnames": "^2.2.11",
    "@types/markdown-it": "^0.0.8",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.5.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^8.3.1",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "build-plugin-component": "^1.0.0",
    "chai": "^4.2.0",
    "eslint": "^9.33.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-standard": "^4.0.1",
    "fs-extra": "^10.0.0",
    "husky": "^3.1.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^10.0.2",
    "markdown-it": "^8.4.2",
    "mocha": "^5.2.0",
    "mochawesome": "^4.1.0",
    "nyc": "^15.0.0",
    "prettier": "^3.6.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^4.3.1",
    "source-map-support": "^0.5.16",
    "stylelint": "^13.7.2",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^5.9.2",
    "url-loader": "^2.1.0"
  },
  "peerDependencies": {
    "react": "^16.9.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "lint-staged": {
    "./src/**/*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "dependencies": {
    "@babel/runtime": "^7.6.2",
    "classnames": "^2.5.1",
    "eventemitter3": "^5.0.1",
    "tsup": "^8.5.0",
    "uuid": "^11.1.0"
  }
}
